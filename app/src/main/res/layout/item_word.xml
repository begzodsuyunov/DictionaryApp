<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="0.5dp"
    android:background="@drawable/for_items"
    android:foreground="?selectableItemBackground"
    android:paddingHorizontal="16dp"
    android:elevation="10dp"
    android:padding="8dp"
    android:layout_marginHorizontal="10dp"
    android:layout_margin="8dp"
    android:paddingVertical="4dp">

    <TextView
        android:id="@+id/txtWord"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/black"
        android:fontFamily="@font/new_font"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="book" />



    <ImageButton
        android:id="@+id/btnVoice"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="4dp"
        android:background="?selectableItemBackgroundBorderless"
        app:layout_constraintRight_toLeftOf="@id/btnStar"
        app:layout_constraintTop_toTopOf="@id/btnStar"
        app:layout_constraintBottom_toBottomOf="@id/btnStar"
        app:layout_goneMarginEnd="10dp"
        android:src="@drawable/volume" />

    <ImageButton
        android:id="@+id/btnStar"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="?selectableItemBackgroundBorderless"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/start_outlined" />


</androidx.constraintlayout.widget.ConstraintLayout>